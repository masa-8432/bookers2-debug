<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book_find.user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book_find.user) do %>
							<%= attachment_image_tag(@book_find.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_find.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_find.title, book_path(@book_find) %></td>
					<td><%= @book_find.body %></td>

					<!--いいね-->
					<% if @book_find.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book_find), method: :delete do %>
            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @book_find.favorites.count %>
            <% end %>
					</td>
					<% else %>
					<td>
						<%= link_to book_favorites_path(@book_find), method: :post do %>
            <i class="fa fa-heart" aria-hidden="true" ></i>
            <%= @book_find.favorites.count %>
            <% end %>
					</td>
					<% end %>
          <!--いいねここまで-->
          <!--コメント-->
          <td>
          	<p class="comment-count">コメント数：<%= @book_find.comments.count %></p>
          </td>
          <!--コメントここまで-->
					<% if @book_find.user.id == current_user.id %>
					<td><%= link_to "Edit", edit_book_path(@book_find.id), class: "btn-sm btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book_find), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				  <% end %>
				</tr>
			</table>
	</div>
	<!--コメント一覧-->
	<div class="col-xs-9">
		<table class="commwnt-table">
    <% @comments.each do |comment| %>
      <tr>
      	<td><%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></br>
      	  <%= comment.user.name %>
      	</td>
      	<td><%= comment.comment %></td>
      	<% if comment.user == current_user %>
      	<td><%= link_to 'Delete', book_comment_path(comment.book.id,comment.id), method: :delete, class: "btn btn-danger" %></td>
      	<% end %>
      </tr>
    <% end %>
    </table>
  </div>
	<!--コメント箱-->
	<div class="col-xs-9">
		<%= form_with(model:[@book_find, @book_comment]) do |f| %>
	    <%= f.text_area :comment, class: 'col-xs-11 book_body' %>
	    <%= f.submit '送信', class: "btn btn-xs btn-base-1 mt-20 pull-left" %>
    <% end %>
	</div>
</div>